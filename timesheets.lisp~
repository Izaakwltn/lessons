;;;;timesheets.lisp

(in-package :lessons)

(defclass lesson ()
  ((month              :initarg :month
		       :accessor month)
   (day                :initarg :day
		       :accessor day)
   (student-last-name  :initarg :last
		       :accessor last)
   (student-first-name :initarg :first
		       :accessor first)
   (duration           :initarg :duration
		       :accessor duration)
   (notes              :initarg :notes
		       :accessor notes)))

(defclass month ()
  ((name   :initarg :name
	    :accessor month)
   (lessons :initarg :lessons
	    :accessor lessons)
   (year    :initarg :year
	    :accessor year)))

(defclass timesheet ()
  ((month  :initarg :month
	   :accessor month)))
